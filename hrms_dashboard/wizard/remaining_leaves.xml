<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="remaining_leaves_wizardform" model="ir.ui.view">
        <field name="name">R_Leaves Wizard</field>
        <field name="model">remaining.leaves.wizard</field>
        <field name="arch" type="xml">
            <form string="Remaining Leave" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="wizard_emp_id" readonly="1"/>
                        </group>
                        <field name="wizard_leave_ids" readonly="1"/>
                        <tree editable="bottom" create="0" delete="0" edit="0">
                            <field name="display_name" />
                            <!-- <field name="duration_display" /> -->
                            <!-- <field name="leaves_taken" /> -->
                        </tree>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>