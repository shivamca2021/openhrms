                            <div class="hr-chart-1">
                                <div class="section-heading">
                                    Hours logged in last 7 days
                                </div>
                                <table class="sample-table">
                                    <thead>
                                        <tr>
                                            <th>Day</th>
                                            <th>Check-In</th>
                                            <th>Check-Out</th>
                                            <th>Hours</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="widget.login_employee.last_7_days">
                                            <t t-foreach="widget.login_employee.last_7_days" t-as="day">
                                                <t t-if="day.day == 'Saturday'">
                                                    <tr>
                                                        <td style="background-color: #b6baba"><t t-esc="day.day"/></td>
                                                        <td style="background-color: #b6baba"></td>
                                                        <td style="background-color: #b6baba"></td>
                                                        <td style="background-color: #b6baba"></td>
                                                    </tr>
                                                </t>
                                                <t t-elif="day.day == 'Sunday'">
                                                    <tr>
                                                        <td style="background-color: #b6baba"><t t-esc="day.day"/></td>
                                                        <td style="background-color: #b6baba"></td>
                                                        <td style="background-color: #b6baba"></td>
                                                        <td style="background-color: #b6baba"></td>
                                                    </tr>
                                                </t>
                                                <t t-elif="day.day == 'Leave'">
                                                    <tr>
                                                        <td style="background-color: #fab5a5">Leave</td>
                                                        <td style="background-color: #fab5a5"></td>
                                                        <td style="background-color: #fab5a5"></td>
                                                        <td style="background-color: #fab5a5"></td>
                                                    </tr>
                                                </t>
                                                <t t-else="">
                                                    <tr>
                                                        <td><t t-esc="day.day"/></td>
                                                        <td><t t-esc="day.check_in"/></td>
                                                        <td><t t-esc="day.check_out"/></td>
                                                        <td><t t-esc="day.hours"/></td>
                                                    </tr>
                                                </t>
                                                
                                            </t>
                                        </t>
                                    </tbody>
